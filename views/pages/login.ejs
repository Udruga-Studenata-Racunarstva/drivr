  <main class="container">
   <h1>Login</h1>
    <!-- LOGIN FORM -->
    <form action="/api/user/login" method="post">
      <div>
        <label>Email</label>
        <input type="text" class="input-field" name="email">
      </div>
      <div>
        <label>Password</label>
        <input type="password" class="input-field" name="password">
